<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jxc.activity.BiJiChangeActivity"
    android:background="@drawable/jxc_biaoge_bg2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:paddingTop="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/form_head">

                    <TextView
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="订单号:" />

                    <EditText
                        android:id="@+id/orderid"
                        android:textSize="15sp"
                        android:background="@drawable/form_input"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:hint="请输入订单号"
                        android:inputType="text"
                        android:textIsSelectable="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/form_body">

                    <TextView
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:text="是否入库:" />

                    <Spinner
                        android:id="@+id/is_ruku_spinner"
                        android:textSize="15sp"
                        android:background="@drawable/form_input"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:hint="是否入库"
                        android:inputType="text"
                        android:textIsSelectable="false" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/form_foot">

                    <TextView
                        android:id="@+id/kehu_type"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:text="客户:"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        />

                    <Spinner
                        android:id="@+id/kehu"
                        android:textSize="15sp"
                        android:background="@drawable/form_input"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp" />

                </LinearLayout>



            </LinearLayout>



        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/insert_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:onClick="insertClick"
            android:text="提交"
            tools:ignore="MissingConstraints"
            android:background="@drawable/jxc_btn_bg"
            android:textSize="17dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>