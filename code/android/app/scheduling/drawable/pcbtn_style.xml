<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="135"
                android:startColor="#1D4ED8"
                android:centerColor="#1E40AF"
                android:endColor="#1E3A8A"
                android:type="linear" />
            <stroke android:width="2dp" android:color="#3B82F6" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="315"
                android:startColor="#3B82F6"
                android:centerColor="#2563EB"
                android:endColor="#1E40AF"
                android:type="linear" />
            <stroke android:width="2dp" android:color="#60A5FA" />
        </shape>
    </item>
</selector>