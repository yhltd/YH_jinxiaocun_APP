<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jxc.activity.BiJiChangeActivity"
    android:background="@color/WhiteSmoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_head">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="商品代码:" />

                <EditText
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:id="@+id/cpDm"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:hint="请输入商品代码"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_body">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="商品名称:" />

                <EditText
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:hint="请输入商品名称"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_body">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="商品类别:" />

                <EditText
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:id="@+id/leiBie"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:hint="请输入商品类别"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_body">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="商品单位:" />

                <EditText
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:id="@+id/danWei"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:hint="请输入商品单位"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_foot">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="备注:" />

                <EditText
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:id="@+id/beizhu"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:hint="请输入备注"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <Button
                android:id="@+id/chear_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:onClick="clearClick"
                android:text="清空"
                tools:ignore="MissingConstraints"
                android:background="@drawable/btn_style"
                android:textSize="17dp"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                android:orientation="vertical"
                android:visibility="invisible"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/update_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:onClick="updateClick"
                android:text="提交"
                android:visibility="gone"
                tools:ignore="MissingConstraints"
                android:background="@drawable/btn_style"
                android:textSize="17dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/insert_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:onClick="insertClick"
                android:text="提交"
                android:visibility="gone"
                tools:ignore="MissingConstraints"
                android:background="@drawable/btn_style"
                android:textSize="17dp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>