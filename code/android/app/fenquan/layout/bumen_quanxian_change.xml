<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fenquan.activity.BuMenQuanXianChangeActivity"
    android:background="@drawable/biaoge_bg">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_head">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="部门" />

                <EditText
                    android:id="@+id/department_name"
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:hint="请输入部门"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_body">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="页面名称" />

                <Spinner
                    android:id="@+id/view_name"
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_body">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="增" />

                <Spinner
                    android:id="@+id/ins"
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_body">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="删" />

                <Spinner
                    android:id="@+id/del"
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_body">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="改" />

                <Spinner
                    android:id="@+id/upd"
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/form_foot">

                <TextView
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="查" />

                <Spinner
                    android:id="@+id/sel"
                    android:textSize="15sp"
                    android:background="@drawable/form_input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:inputType="text"
                    android:textIsSelectable="false" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/update_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:onClick="updateClick"
            android:text="提交"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            android:background="@drawable/fenquan_btn_bg"
            android:textSize="17dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/insert_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:onClick="insertClick"
            android:text="提交"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            android:background="@drawable/fenquan_btn_bg"
            android:textSize="17dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>