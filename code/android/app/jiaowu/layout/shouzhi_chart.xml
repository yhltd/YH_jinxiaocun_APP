<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fenquan.activity.BuMenQuanXianActivity"
    android:background="@drawable/biaoge_bg2">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_weight="8"
        android:background="@drawable/fenquan_table_body"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:elevation="3dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="调 整 底 部 滑 块 以 查 看 各 列 的 数 据"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/jxc_shape_corner_sel"
        android:gravity="center_vertical"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="30dp"
        android:elevation="3dp">


        <com.example.myapplication.EChartView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/barChart"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </com.example.myapplication.EChartView>

    </LinearLayout>

</LinearLayout>