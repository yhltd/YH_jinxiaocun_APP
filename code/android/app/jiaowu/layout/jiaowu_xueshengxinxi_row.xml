<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/shape_corner_sel">

        <TextView
            android:gravity="center"
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="序号"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/realName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="学生姓名"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="性别"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/rgdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="报名日期"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="培训课程"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="责任教师"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/classnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="班级"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="电话"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="学费"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="已缴费"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/nocost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="未交费"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/nall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="已上课时"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/nohour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="剩余课时"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/allhour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="总课时"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

        <TextView
            android:gravity="center"
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="状态"
            android:textStyle="bold"
            android:width="100dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </View>

    </LinearLayout>
</LinearLayout>
