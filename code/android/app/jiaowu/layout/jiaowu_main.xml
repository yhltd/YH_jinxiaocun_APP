                        android:textSize="11sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_main_02"
                    android:id="@+id/yonghuguanli"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/gys" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:text="用户管理"
                        android:textColor="@color/main_text"
                        android:textSize="17sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="系统账号设置"
                        android:textSize="11sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/shape_corner_main_03"
                    android:id="@+id/quanxianguanli"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/kehu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:text="权限管理"
                        android:textColor="@color/main_text"
                        android:textSize="17sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_marginLeft="5dp"
