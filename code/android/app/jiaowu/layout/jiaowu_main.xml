                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="账号权限设置"
                        android:textSize="11sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:text="财务相关" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_main_04"
                    android:id="@+id/jiaofeijilu"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/shoufamingxi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:text="缴费记录"
                        android:textColor="@color/main_text"
                        android:textSize="17sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="学费缴纳记录"
                        android:textSize="11sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_main_02"
                    android:id="@+id/shouzhimingxi"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/shangpin_jinchu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:text="收支明细"
                        android:textColor="@color/main_text"
                        android:textSize="17sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="收支记录填写"
                        android:textSize="11sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_corner_main_01"
                    android:id="@+id/qianfeixueyuan"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/kehu_chuhuo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:text="欠费学员"
                        android:textColor="@color/main_text"
                        android:textSize="17sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="未缴学费学员"
                        android:textSize="11sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/shape_corner_main_02"
                    android:id="@+id/jiaoshigongzi"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/shangpinguanli" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
