                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="教师考勤记录"
                        android:textSize="11sp"
                        tools:ignore="RtlSymmetry" />
