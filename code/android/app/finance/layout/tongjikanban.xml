<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".finance.activity.ZhiNengKanBanActivity"
    android:background="@drawable/biaoge_bg">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:background="@drawable/caiwu_kanban_zongjie"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/jiejin_sum"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="17dp"
            android:textColor="@color/white"
            />

        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/daijin_sum"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="17dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:background="@drawable/caiwu_kanban_zongjie"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/jiefang_sum"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="17dp"
            android:textColor="@color/white"
            />

        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/daifang_sum"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="17dp"
            android:textColor="@color/white"

            />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:id="@+id/main_scollview" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/toggle_chart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换为折线图"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:text="科目利润成本统计"
                android:background="@drawable/caiwu_table_body"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_marginTop="10dp"
                android:id="@+id/bc_1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/white"/>

            <com.github.mikephil.charting.charts.LineChart
                android:layout_marginTop="10dp"
                android:id="@+id/lc_1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/caiwu_form_body"
                android:visibility="gone"/>


        </LinearLayout>


    </ScrollView>

</LinearLayout>