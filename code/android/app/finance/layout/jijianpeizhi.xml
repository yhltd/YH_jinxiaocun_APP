<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".finance.activity.JiJianPeiZhiActivity"
    android:background="@drawable/caiwu_biaoge_bg4">

    <!-- 顶部选择区域 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:background="@drawable/shape_corner"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"/>
        <Spinner
            android:id="@+id/type_select"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="项目类型"
            android:spinnerMode="dialog"/>
    </LinearLayout>

    <!-- 数据列表区域 -->
    <HorizontalScrollView
        android:fillViewport="true"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 表头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#637375"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- 第一列标题 -->
                <TextView
                    android:gravity="center"
                    android:id="@+id/column1_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="科目"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- 第二列标题（税率时显示） -->
                <TextView
                    android:gravity="center"
                    android:id="@+id/column2_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="临界值"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 列表 -->
            <ListView
                android:id="@+id/jingyingshouru_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="1dp"
                android:paddingBottom="5dp" />
        </LinearLayout>

    </HorizontalScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/biji_insert"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:onClick="onInsertClick"
            android:text="添加"
            tools:ignore="MissingConstraints"
            android:background="@drawable/caiwu_btn_bg"
            android:textSize="17dp"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>