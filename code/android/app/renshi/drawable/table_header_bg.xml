<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影 -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- 渐变背景 - 添加透明度 -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#804DC5D5"
                android:endColor="#802A9BB0"
                android:type="linear" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>