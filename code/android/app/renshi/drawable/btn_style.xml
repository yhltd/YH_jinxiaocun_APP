<?xml version="1.0" encoding="UTF-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="1.0px"
    android:insetRight="1.0px" >

    <selector>
        <item android:state_pressed="true">
            android:color="@color/white">
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#0096ff"
                    android:startColor="#0087e6" />

                <corners android:radius="15dip" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#0087e6"
                    android:startColor="#0096ff" />

                <corners android:radius="15dip" />
            </shape>
        </item>
    </selector>
    <selector>
        <item
            android:state_pressed="false"
            android:color="@color/white">
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#0087e6"
                    android:startColor="#0096ff" />

                <corners android:radius="15dip" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="270.0"
                    android:endColor="#0087e6"
                    android:startColor="#0096ff" />

                <corners android:radius="15dip" />
            </shape>
        </item>
    </selector>

</inset>