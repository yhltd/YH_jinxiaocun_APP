<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F8FAFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- 柔和阴影 -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#0A3A7BFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- 边框高光 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#20FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>