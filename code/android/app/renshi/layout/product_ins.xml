<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mendian.activity.ProductInsActivity"
    android:fillViewport="true"
    android:background="@drawable/mendian_diandantupian_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/product_img01"
            android:layout_marginTop="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/mendian_spxz_body">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/mendian_spxz_head">

                <!-- 商品名称（左对齐） -->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="5dp"
                    android:text="商品名称"
                    android:textColor="#ffffff"
                    android:textSize="25dp"/>

                <!-- 价格数值（在符号右侧） -->
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="5dp"
                    android:text="价格"
                    android:textColor="#ffffff"
                    android:textSize="25dp"/>

                <!-- 价格符号（固定在价格左侧） -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toStartOf="@id/price"
                    android:layout_alignBaseline="@id/price"
                    android:text="￥"
                    android:textColor="#ffffff"
                    android:textSize="20dp"/>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/mendian_diandan_bodytupian2">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"


                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:background="@drawable/mendian_diandan_xiangqing_xiaokuang"
                    >

                    <TextView
                        android:layout_width="100dp"

                        android:textSize="20dp"
                        android:layout_height="40dp"


                        android:text="商品类型:"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"

                        />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="80dp"

                        android:textSize="20dp"
                        android:layout_height="40dp"


                        android:text="商品类型"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        />
                </LinearLayout>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:background="@drawable/mendian_diandan_xiangqing_xiaokuang"
                   >
                    <TextView
                        android:layout_width="100dp"

                        android:textSize="20dp"
                        android:layout_height="40dp"


                        android:text="单位:"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        />

                    <TextView
                        android:id="@+id/danwei"
                        android:layout_width="80dp"

                        android:textSize="20dp"
                        android:layout_height="40dp"


                        android:text="单位"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        />
                </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/mendian_diandan_xiangqing_xiaokuang"
                        >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"

                        android:text="规格:"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                       />


                    <Spinner
                        android:id="@+id/guige"
                        android:layout_width="120dp"
                        android:layout_height="40dp"

                        android:textSize="25sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"

                        android:spinnerMode="dialog"
                        android:gravity="end" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:background="@drawable/mendian_diandan_xiangqing_xiaokuang"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"

                            android:text="口味:"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            />

                    <Spinner
                        android:id="@+id/kouwei"
                        android:layout_width="120dp"
                        android:layout_height="40dp"

                        android:textSize="25sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#FFFFFF"

                        android:spinnerMode="dialog"
                       />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:background="@drawable/mendian_diandan_xiangqing_xiaokuang"
                        >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"

                        android:text="商品数量:"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                       />

                <EditText
                    android:id="@+id/num"
                    android:layout_width="120dp"
                    android:layout_height="50dp"

                    android:textIsSelectable="false"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#5E5E5E"
                    android:gravity="center"
                    android:hint="填入数量"
                   />
                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <Button
                    android:id="@+id/insert_btn"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:onClick="insertClick"
                    android:text="+ 加入购物车"
                    android:background="@drawable/mendian_gwcbtn_bg"
                    android:textColor="#ffffff"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>