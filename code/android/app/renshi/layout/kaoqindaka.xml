<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- 搜索区域 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/shape_corner"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="8dp"
            android:padding="4dp">

            <EditText
                android:id="@+id/et_department"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColorHint="#4DC5D5"
                android:textColor="#4DC5D5"
                android:hint=" 输入部门"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/hengxian"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColorHint="#4DC5D5"
                android:textColor="#4DC5D5"
                android:hint=" 输入姓名"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btn_save_info"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="保存信息"
                android:background="@drawable/btn_style"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"/>

        </LinearLayout>

        <!-- 时间显示 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_corner"
            android:layout_marginHorizontal="8dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025年01月19日"
                android:textColor="#4DC5D5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:02:14"
                android:textColor="#4DC5D5"
                android:textSize="36sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 打卡按钮 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp">

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="签到"
                android:gravity="center"
                android:background="@drawable/btn_style"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="签退"
                android:gravity="center"
                android:background="@drawable/btn_style"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:padding="12dp"/>

        </LinearLayout>

        <!-- 打卡状态 -->
        <TextView
            android:id="@+id/tv_sign_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未签到"
            android:textColor="#ff4d4f"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:background="@drawable/shape_corner"/>

        <!-- 工作安排 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <!-- 创建一个作为边框的 View -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_margin="-16dp" /> <!-- 负边距让它覆盖整个区域 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今日工作安排"
                android:textColor="#4DC5D5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="排班："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保安部"
                    android:textColor="#4DC5D5"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="工作时间："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 - 18:00"
                    android:textColor="#4DC5D5"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="午休时间："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_rest_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00 - 13:05"
                    android:textColor="#4DC5D5"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 请假申请 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="8dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假申请"
                    android:textColor="#4DC5D5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_apply_leave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请请假"
                    android:background="@drawable/btn_style"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="12dp" />

            </LinearLayout>

            <!-- 请假记录表格标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#E6F7FF"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="请假时间"
                    android:textColor="#1890FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="天数"
                    android:textColor="#1890FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="原因"
                    android:textColor="#1890FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="状态"
                    android:textColor="#1890FF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 请假记录列表容器 -->
            <LinearLayout
                android:id="@+id/container_leave_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 动态添加请假记录行 -->

            </LinearLayout>

            <!-- 无请假记录提示 -->
            <TextView
                android:id="@+id/tv_no_leave_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="暂无请假记录"
                android:textColor="#999999"
                android:textSize="14sp"
                android:padding="20dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>