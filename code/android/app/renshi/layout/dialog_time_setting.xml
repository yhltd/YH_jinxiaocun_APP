<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间设置"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- 部门输入 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="部门:"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_department"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="请输入部门"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:background="@drawable/form_input"/>

    </LinearLayout>

    <!-- 工作时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="工作时间:"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_work_start_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="08:00"
            android:textColor="@color/black"
            android:background="@drawable/form_input"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/tv_work_end_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="17:00"
            android:textColor="@color/black"
            android:background="@drawable/form_input"
            android:clickable="true"/>

    </LinearLayout>

    <!-- 午休时间 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="午休时间:"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_break_start_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="12:00"
            android:textColor="@color/black"
            android:background="@drawable/form_input"
            android:clickable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/tv_break_end_time"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="13:00"
            android:textColor="@color/black"
            android:background="@drawable/form_input"
            android:clickable="true"/>

    </LinearLayout>

    <!-- 操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="取消"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="保存安排"
            android:background="@drawable/newbtn_style"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>