<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteSmoke">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yemianbeijing"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <!-- 部门 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="部门:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_bumen"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"
                    android:hint="请输入部门"
                    android:inputType="text"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- 员工名称 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="员工名称:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_xingming"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"
                    android:hint="请输入员工名称"
                    android:inputType="text"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- 申请时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="申请时间:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- 改为TextView，可点击选择日期 -->
                <TextView
                    android:id="@+id/tv_tijiaoshijian"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"
                    android:gravity="center_vertical"
                    android:hint="请选择申请时间"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:textColor="#4DC5D5"/>

                <!-- 隐藏的EditText用于存储值 -->
                <EditText
                    android:id="@+id/et_tijiaoshijian"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- 起始请假日期 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="起始请假日期:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- 改为TextView，可点击选择日期 -->
                <TextView
                    android:id="@+id/tv_qsqingjiashijian"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"
                    android:gravity="center_vertical"
                    android:hint="请选择起始请假日期"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:textColor="#4DC5D5"/>

                <!-- 隐藏的EditText用于存储值 -->
                <EditText
                    android:id="@+id/et_qsqingjiashijian"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- 截止请假日期 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="截止请假日期:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- 改为TextView，可点击选择日期 -->
                <TextView
                    android:id="@+id/tv_jzqingjiashijan"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"
                    android:gravity="center_vertical"
                    android:hint="请选择截止请假日期"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:textColor="#4DC5D5"/>

                <!-- 隐藏的EditText用于存储值 -->
                <EditText
                    android:id="@+id/et_jzqingjiashijan"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- 请假原因 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="请假原因:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_qingjiayuanyin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"
                    android:hint="请输入请假原因"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- 审批状态 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="审批状态:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <!-- 改为Spinner下拉选择 -->
                <Spinner
                    android:id="@+id/spinner_zhuangtai"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"/>
            </LinearLayout>

            <!-- 审批原因 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/shape_corner_sel"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="审批原因:"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_shenpiyuanyin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/form_input"
                    android:hint="请输入审批原因"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="取消"
            tools:ignore="MissingConstraints"
            android:background="@drawable/newbtn_style"
            android:textSize="17dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:orientation="vertical"
            android:visibility="invisible"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="保存"
            tools:ignore="MissingConstraints"
            android:background="@drawable/newbtn_style"
            android:textSize="17dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.percentlayout.widget.PercentRelativeLayout>