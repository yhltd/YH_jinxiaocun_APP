<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".renshi.activity.BaoPanActivity"
    android:background="@drawable/shape_corner"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:background="@drawable/shape_corner"
        android:layout_marginTop="5dp">
        <EditText
            android:id="@+id/start_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColorHint="#4DC5D5"
            android:textColor="#4DC5D5"
            android:hint="选择开始时间"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hengxian"
            android:orientation="vertical" />
        <EditText
            android:id="@+id/stop_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColorHint="#4DC5D5"
            android:textColor="#4DC5D5"
            android:hint="选择结束时间"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/sel_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="查询"
            android:background="@drawable/newbtn_style"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"/>
        <Button
            android:id="@+id/clear_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="清除"
            android:background="@drawable/newbtn_style"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/list_table"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="82"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/yemianbeijing"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/title"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="100dp"
                    android:gravity="center"
                    android:text="员工姓名"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="120dp"
                    android:gravity="center"
                    android:text="录入日期"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="100dp"
                    android:gravity="center"
                    android:text="实发工资"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="100dp"
                    android:gravity="center"
                    android:text="全勤天数"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="100dp"
                    android:gravity="center"
                    android:text="个人支出"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="100dp"
                    android:gravity="center"
                    android:text="企业支出"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

            </LinearLayout>

            <ListView
                android:id="@+id/baopan_list"
                android:layout_width="match_parent"
                android:layout_height="539dp"
                android:layout_weight="1"
                android:dividerHeight="1dp"
                android:paddingBottom="5dp" />
        </LinearLayout>

    </HorizontalScrollView>

    <ListView
        android:id="@+id/list_block"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="82"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:divider="@null"
        android:background="@drawable/yemianbeijing"
        android:paddingBottom="5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chear_btn"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:onClick="switchClick"
            android:text="切换列表"
            tools:ignore="MissingConstraints"
            android:background="@drawable/newbtn_style"
            android:textSize="17dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:orientation="vertical"
            android:visibility="invisible"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/xiujiaClick"
            android:onClick="onInsertClick"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="审批"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:background="@drawable/newbtn_style"
            android:textSize="17dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:orientation="vertical"
            android:visibility="invisible"
            android:gravity="center_horizontal"/>
        <Button
            android:id="@+id/shenpijilu"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="审批记录"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:background="@drawable/newbtn_style"
            android:textSize="17dp"
            android:textColor="@color/white"/>
    </LinearLayout>

