<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".renshi.activity.GongZuoShiJianActivity"
    android:background="@drawable/shape_corner"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- 顶部查询区域 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:background="@drawable/shape_corner"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp">

        <Button
            android:id="@+id/btn_range_select"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="日期范围选择"
            android:background="@drawable/newbtn_style"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_new_schedule"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="新建工作安排"
            android:background="@drawable/newbtn_style"
            android:textSize="15dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- 日历区域 -->
    <HorizontalScrollView
        android:layout_width="330dp"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/shape_corner_sel">

            <!-- 日历头部 -->
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/title">

                <Button
                    android:id="@+id/btn_prev_month"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="‹"
                    android:textSize="20sp"
                    android:textColor="@color/title_text"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/tv_current_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2024年1月"
                    android:textColor="@color/title_text"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_next_month"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="›"
                    android:textSize="20sp"
                    android:textColor="@color/title_text"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <!-- 星期标题 -->
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/title">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="一"
                    android:textColor="@color/title_text"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="二"
                    android:textColor="@color/title_text"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="三"
                    android:textColor="@color/title_text"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="四"
                    android:textColor="@color/title_text"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="五"
                    android:textColor="@color/title_text"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="六"
                    android:textColor="@color/title_text"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="日"
                    android:textColor="@color/title_text"
                    android:textSize="16sp"/>

            </LinearLayout>

            <!-- 日历网格 -->
            <GridLayout
                android:id="@+id/calendar_grid"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:columnCount="7"
                android:rowCount="6"
                android:padding="5dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- 工作安排列表 -->
    <ListView
        android:id="@+id/list_schedule"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="3dp"
        android:divider="@null"
        android:background="@drawable/yemianbeijing"
        android:paddingBottom="5dp"/>

</LinearLayout>