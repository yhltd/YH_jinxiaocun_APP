                    android:textSize="18sp"
                    android:text="部门:" />

                <Spinner
                    android:id="@+id/C"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:textIsSelectable="false" />



            </LinearLayout>


            <LinearLayout
