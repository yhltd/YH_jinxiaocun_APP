                    android:layout_marginLeft="24dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="绩效工资:" />

                <EditText
                    android:id="@+id/AC"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="24dp"
