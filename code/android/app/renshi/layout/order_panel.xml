    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_bottom"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/ddh"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="订单编号" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border_bottom"
        android:gravity="center">

        <Button
            android:id="@+id/clear_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="作废" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:orientation="vertical"
            android:visibility="invisible"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/sel_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="购物车" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/search"
            android:orientation="vertical"
            android:visibility="invisible"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/ins_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="结账" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rela_button"
        android:layout_below="@+id/linear_top"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/left_listview"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:divider="@null"
            android:scrollbars="none" />

        <com.example.myapplication.mendian.entity.PinnedHeaderListView
            android:id="@+id/pinnedListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"></com.example.myapplication.mendian.entity.PinnedHeaderListView>
    </LinearLayout>

