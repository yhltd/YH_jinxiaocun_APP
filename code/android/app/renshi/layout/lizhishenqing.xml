<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:paddingBottom="20dp"
            android:background="@drawable/border_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离职申请表"
                android:textColor="#764ba2"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请填写以下信息提交离职申请"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 表单卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_body"
            android:padding="24dp"
            android:layout_marginBottom="16dp">

            <!-- 部门 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="部门 *"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/sp_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_department_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#f44336"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 姓名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名 *"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tv_name_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#f44336"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 提交日期（只读） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交日期"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_submit_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统自动生成"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 申请原因 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请原因 *"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_reason"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="请详细说明离职原因..."
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:gravity="top"
                    android:maxLength="500"
                    android:inputType="textMultiLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_word_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/500"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_reason_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#f44336"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 审批结果 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审批结果"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_approval_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:text="待审批"
                    android:textColor="#ff976a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交后由领导审批"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 审批原因 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审批原因"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_approval_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:text="审批通过后由领导填写"
                    android:textColor="#999999" />

            </LinearLayout>

        </LinearLayout>

        <!-- 操作按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- 提交按钮 -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/background_primary"
                android:text="提交申请"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- 重置按钮 -->
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:text="重置表单"
                android:textColor="#764ba2"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <!-- 查看历史记录按钮 -->
            <Button
                android:id="@+id/btn_history"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:text="查看历史记录"
                android:textColor="#764ba2"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- 填写说明 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/form_body"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写说明："
                android:textColor="#764ba2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 请务必如实填写所有必填信息\n2. 提交日期由系统自动生成，不可修改\n3. 提交后请等待上级领导审批\n4. 审批结果和审批原因将由领导填写\n5. 如有疑问，请联系人力资源部门"
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingExtra="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>