<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border_bottom">

        <TextView
            android:id="@+id/recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="收卡人"
            android:textStyle="bold"
            android:width="100dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/cardholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="付款人"
            android:textStyle="bold"
            android:width="100dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/drawee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="持卡人"
            android:textStyle="bold"
            android:width="100dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/issuing_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="发卡行"
            android:textStyle="bold"
            android:width="150dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/bill_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="账单日"
            android:textStyle="bold"
            android:width="200dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/repayment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="还款日"
            android:textStyle="bold"
            android:width="200dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="总金额"
            android:textStyle="bold"
            android:width="150dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/repayable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="应还款"
            android:textStyle="bold"
            android:width="150dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="剩余额"
            android:textStyle="bold"
            android:width="150dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="借款额"
            android:textStyle="bold"
            android:width="150dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="手续费"
            android:textStyle="bold"
            android:width="150dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="电话号"
            android:textStyle="bold"
            android:width="200dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="密码"
            android:textStyle="bold"
            android:width="200dp"
            android:gravity="center"/>
        <View
            android:layout_width="3dp"
            android:background="#BFBFBF"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:textSize="14sp"
            android:text="员工"
            android:textStyle="bold"
            android:width="150dp"
            android:gravity="center"/>


    </LinearLayout>
</LinearLayout>
