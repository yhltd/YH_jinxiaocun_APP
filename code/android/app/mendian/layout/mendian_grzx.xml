<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/caiwu_grzx_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context=".finance.activity.BaoBiaoActivity"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center_vertical"
            android:background="@drawable/grzx_dingbubg"
            android:layout_margin="10dp"
            android:padding="2dp"
            >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                >

                <View
                    android:id="@+id/rotating_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grzx_rotating"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:scaleX="1.5" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/companylogo"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:id="@+id/yonghuming"
                    android:layout_width="wrap_content"
                    android:textSize="25dp"
                    android:layout_height="40dp"
                    android:text="用户名"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="20dp"
                    />

                <!--        <Space-->
                <!--            android:layout_width="0dp"-->
                <!--            android:layout_height="1dp"-->
                <!--            android:layout_weight="1"/>-->

                <LinearLayout
                    android:id="@+id/tuichu"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"

                    android:layout_gravity="right">


                    <TextView
                        android:layout_width="80dp"
                        android:textSize="20dp"
                        android:layout_height="40dp"
                        android:text="退出登录"
                        android:gravity="center"
                        android:textColor="#261FFF"
                        android:layout_marginTop="2dp"
                        />
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/grzx_tuichu"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center_vertical"
            android:background="@drawable/grzx_huanyingbg"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:layout_height="40dp"
                android:text="欢迎使用云合智慧门店系统"
                android:gravity="center"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/grzx_xinxibg"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/grzx_ssgs"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:textSize="15dp"
                    android:layout_height="40dp"
                    android:text="所属公司"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/ssgs"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:layout_height="40dp"
                    android:text="所属公司"
                    android:gravity="center"
                    android:textColor="#858585"
                    android:layout_marginEnd="15dp"
                    />

            </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical"

                            android:background="@drawable/grzx_xinxi_formbody">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/grzx_ygmc"
                                android:layout_marginStart="5dp"/>
                            <TextView
                                android:layout_width="80dp"
                                android:textSize="15dp"
                                android:layout_height="40dp"
                                android:text="员工名称"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginStart="5dp"
                                />
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/ygmc"
                                android:layout_width="wrap_content"
                                android:textSize="15dp"
                                android:layout_height="40dp"
                                android:text="员工名称"
                                android:gravity="center"
                                android:textColor="#858585"
                                android:layout_marginEnd="15dp"
                                />
                        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_marginTop="-3dp"
                android:background="@drawable/grzx_xinxi_formbody">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/grzx_zhmc"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:textSize="15dp"
                    android:layout_height="40dp"
                    android:text="账号名称"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/zhmc"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:layout_height="40dp"
                    android:text="账号名称"
                    android:gravity="center"
                    android:textColor="#858585"
                    android:layout_marginEnd="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_marginTop="-3dp"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/grzx_ygsf"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:layout_width="80dp"
                    android:textSize="15dp"
                    android:layout_height="40dp"
                    android:text="员工身份"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/ygsf"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:layout_height="40dp"
                    android:text="员工身份"
                    android:gravity="center"
                    android:textColor="#858585"
                    android:layout_marginEnd="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <com.youth.banner.Banner
            android:id="@+id/main_banner"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:banner_radius="15dp"
            android:layout_margin="10dp"
            app:banner_loop_time="5000"
            app:layout_heightPercent="20%"
            app:layout_widthPercent="100%"
            />

    </LinearLayout>
</ScrollView>