<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mendian.activity.MemberlevelChangeActivity"
    android:background="@drawable/mendian_biaoge_bg3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/fenquan_table_body"
            android:layout_margin="16dp">
            <LinearLayout
                android:paddingTop="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="级别名称"
                    android:textColor="@color/white"
                    />

            <EditText
                android:id="@+id/jibie"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="请输入级别名称"
                android:inputType="text"
                android:textIsSelectable="false"
                android:textColorHint="#3A3A3A"
                android:textColor="@color/white"/>
            </LinearLayout>
                <LinearLayout
                    android:paddingTop="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="消费额度门槛"
                        android:textColor="@color/white"
                        />

            <EditText
                android:id="@+id/menkan"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="请输入消费额度门槛"
                android:inputType="text"
                android:textIsSelectable="false"
                android:textColorHint="#3A3A3A"
                android:textColor="@color/white"/>
                </LinearLayout>
                    <LinearLayout
                        android:paddingTop="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="折扣比例"
                            android:textColor="@color/white"
                            />

            <EditText
                android:id="@+id/bili"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:hint="请输入折扣比例"
                android:inputType="text"
                android:textIsSelectable="false"
                android:textColorHint="#3A3A3A"
                android:textColor="@color/white"/>
                    </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <Button
                android:id="@+id/update_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="updateClick"
                android:text="提交"
                android:background="@drawable/mendian_btn_bg"
                android:textColor="#ffffff"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/insert_btn"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:onClick="insertClick"
                android:text="提交"
                android:background="@drawable/mendian_btn_bg"
                android:textColor="#ffffff"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>