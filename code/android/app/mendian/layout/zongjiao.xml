<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mendian.activity.KehuinfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@drawable/mendian_biaoge_bg3">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#58bd2c"
                android:gravity="center"
                android:typeface="monospace"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="200dp"
                    android:text="日期"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="3dp"
                    android:background="#FFFFFF"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="150dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:text="交易额"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="3dp"
                    android:background="#FFFFFF"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="150dp"
                    android:text="已刷额"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="3dp"
                    android:background="#FFFFFF"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="150dp"
                    android:text="手续费"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="3dp"
                    android:background="#FFFFFF"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="150dp"
                    android:text="利润"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <ListView
                android:id="@+id/Zongjiao_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animationCache="false"
                android:cacheColorHint="#000000"
                android:choiceMode="multipleChoice"
                android:divider="@color/cardview_shadow_start_color"
                android:dividerHeight="2dp"
                android:scrollingCache="false"

                />
        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/sele_out"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginTop="10dp"

        android:background="@drawable/mendian_chaxun_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
          >

            <EditText
                android:id="@+id/start_date"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="起始时间"
                android:textSize="10dp"
                android:textColorHint="#DCDCDC"
                android:textColor="#FFFFFF"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <EditText
                android:id="@+id/end_date"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="终止时间"
                android:textSize="10dp"
                android:textColorHint="#DCDCDC"
                android:textColor="#FFFFFF"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <Button
                android:id="@+id/sel_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/search"
                android:gravity="center_horizontal" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>

<Button
android:id="@+id/toggle_button"
android:layout_width="40dp"
android:layout_height="40dp"
android:text="收起"
android:textColor="@color/white"
android:textSize="12sp"
android:background="@drawable/mendian_shouqi"
android:layout_gravity="bottom|start"
android:layout_marginBottom="5dp"
android:layout_marginStart="10dp" />

    </FrameLayout>