<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 设置背景颜色 -->
    <solid android:color="#E6650F" /> <!-- 使用你喜欢的颜色 -->

    <!-- 设置边框（可选） -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />

    <!-- 设置内边距（可选） -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>